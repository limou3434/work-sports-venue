.container {
    padding: 30rpx;
    background-color: #f8f9fa;
  }
  
  .header {
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .title {
    font-size: 42rpx;
    font-weight: bold;
    color: #1abc9c;
  }
  
  .section {
    background-color: #ffffff;
    border-radius: 15rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    padding: 30rpx;
    margin-bottom: 30rpx;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 15rpx;
  }
  
  .gate-status,
  .sensor-data {
    font-size: 32rpx;
    color: #555;
  }
  
  .gate-switch {
    margin-top: 10rpx;
  }
  