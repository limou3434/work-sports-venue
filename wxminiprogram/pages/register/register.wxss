/* 页面整体背景 */
.container {
    background-color: #f8f9fa;
    min-height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  /* 标题样式 */
  .header {
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .title {
    font-size: 42rpx;
    font-weight: bold;
    color: #1abc9c;
  }
  
  /* 表单样式 */
  .form {
    background-color: #ffffff;
    border-radius: 15rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .form-item {
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
  }
  
  .label {
    width: 200rpx;
    font-size: 32rpx;
    color: #333;
  }
  
  .input {
    flex: 1;
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
    padding: 10rpx;
    font-size: 28rpx;
  }
  
  .code-btn {
    margin-left: 10rpx;
    font-size: 28rpx;
    background-color: #1abc9c;
    color: #fff;
  }
  
  .submit-btn {
    margin-top: 30rpx;
    background-color: #1abc9c;
    color: #fff;
    font-size: 32rpx;
    border-radius: 10rpx;
  }
  