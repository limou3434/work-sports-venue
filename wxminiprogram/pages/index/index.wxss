/* 页面整体样式 */
page, .scroll-area {
  background-color: #f0f0f0; /* 灰色背景，铺满整个页面 */
  min-height: 100vh; /* 确保页面背景铺满整个可视高度 */
  box-sizing: border-box;
  padding: 20rpx; /* 页面边距 */
}

/* 欢迎区域 */
.header {
  text-align: center;
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info {
  margin-bottom: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.welcome-text {
  font-size: 42rpx;
  font-weight: bold;
  color: #1abc9c;
  margin-bottom: 30rpx;
}

.banner {
  width: 100%;
  height: 200rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 在 .wxss 文件中 */
.banner {
  width: 100%;
  height: 100px; /* 或你想要的高度 */
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片不会拉伸，类似于 mode="aspectFill" */
}

/* 功能导航区域 */
.nav-area {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: 20rpx;
  margin: 30rpx 10rpx;
}

.nav-item {
  width: 45%;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.nav-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.nav-item text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 蓝牙功能区域 */
.bluetooth-area {
  background-color: #ffffff;
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.bluetooth-area button {
  background-color: #1abc9c;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}

.bluetooth-list {
  margin-top: 20rpx;
}

.bluetooth-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.bluetooth-item {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
}

/* 公告弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.modal-body {
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 48rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn {
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  cursor: pointer;
}

.btn-cancel {
  background-color: #f0f0f0;
  color: #333;
}

.btn-confirm {
  background-color: #1abc9c;
  color: #fff;
}

/* Canvas区域样式 */
.canvas-area {
  background-color: #ffffff;
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.canvas-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.test-canvas {
  width: 100%;
  height: 300rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.canvas-area button {
  background-color: #1abc9c;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  width: 100%;
}  