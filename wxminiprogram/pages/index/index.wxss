/* 页面整体样式 */
page, .scroll-area {
    background-color: #f0f0f0; /* 灰色背景，铺满整个页面 */
    min-height: 100vh; /* 确保页面背景铺满整个可视高度 */
    box-sizing: border-box;
    padding: 20rpx; /* 页面边距 */
  }
  
  /* 欢迎区域 */
  .header {
    text-align: center;
    margin-bottom: 50rpx;
  }
  
  .welcome-text {
    font-size: 42rpx;
    font-weight: bold;
    color: #1abc9c;
    margin-bottom: 50rpx;
  }
  
  .banner {
    width: 100%;
    height: 200rpx;
    border-radius: 15rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  }
  
  /* 功能导航区域 */
  .nav-area {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 20rpx;
    margin: 30rpx 10rpx;
  }
  
  .nav-item {
    width: 45%;
    background-color: #ffffff;
    padding: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    text-align: center;
  }
  
  .nav-item image {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
  }
  
  .nav-item text {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  /* 蓝牙功能区域 */
  .bluetooth-area {
    background-color: #ffffff;
    margin: 20rpx 0;
    padding: 30rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .bluetooth-area button {
    background-color: #1abc9c;
    color: #ffffff;
    font-size: 32rpx;
    font-weight: bold;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    text-align: center;
  }
  
  .bluetooth-list {
    margin-top: 20rpx;
  }
  
  .bluetooth-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .bluetooth-item {
    background-color: #f9f9f9;
    padding: 20rpx;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
  }
  