.trainer-list {
    padding: 20rpx;
    background-color: #f8f9fa;
  }
  
  .trainer-item {
    background-color: #fff;
    border-radius: 15rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .trainer-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .trainer-status {
    font-size: 28rpx;
    margin: 10rpx 0;
    color: #777;
  }
  
  .countdown {
    font-size: 28rpx;
    color: #e74c3c;
    margin-bottom: 10rpx;
  }
  
  .reserve-btn {
    color: #fff;
    font-size: 28rpx;
    border-radius: 10rpx;
    text-align: center;
  }
  
  .reset-area {
    position: fixed;
    bottom: 50rpx;
    right: 50rpx;
  }
  
  .reset-btn {
    background-color: #ff7f50;
    color: #fff;
    border-radius: 10rpx;
    font-size: 28rpx;
    padding: 10rpx 20rpx;
  }
  