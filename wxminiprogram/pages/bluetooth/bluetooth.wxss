.container {
  padding: 30rpx;
  background-color: #f4f6f9;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #007aff;
}

.btn {
  display: block;
  width: 90%;
  margin: 10rpx auto;
  padding: 20rpx;
  background-color: #007aff;
  color: white;
  text-align: center;
  border-radius: 15rpx;
  font-size: 34rpx;
}

.device-list {
  margin-top: 20rpx;
  max-height: 300rpx;
  overflow-y: auto;
}

.connected-section {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-box {
  width: 100%;
  padding: 15rpx;
  font-size: 32rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.data-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.data-value {
  font-size: 32rpx;
  color: #555;
  display: block;
  margin-top: 10rpx;
}

.disconnect-btn {
  background-color: #ff3b30;
}

.section {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.gate-status, .sensor-data {
  font-size: 32rpx;
  color: #555;
}

.gate-switch {
  margin-top: 10rpx;
}