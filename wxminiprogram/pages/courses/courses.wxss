/* 整体页面样式 */
.container {
    padding: 20rpx;
    background-color: #f8f9fa;
    display: flex;
    flex-direction: column;
    align-items: center; /* 垂直居中 */
  }
  
  /* 标题样式 */
  .header {
    text-align: center; /* 水平居中 */
    margin-bottom: 30rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
  }
  
  /* 课程卡片列表 */
  .course-list {
    display: flex;
    flex-direction: column;
    align-items: center; /* 水平居中 */
    gap: 20rpx; /* 卡片之间的间距 */
  }
  
  /* 单个课程卡片 */
  .course-item {
    width: 90%; /* 卡片宽度 */
    background-color: #fff;
    border-radius: 15rpx;
    padding: 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    text-align: center; /* 文字居中 */
  }
  
  /* 课程名称 */
  .course-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #1abc9c;
    margin-bottom: 10rpx;
  }
  
  /* picker 选择器组 */
  .picker-group {
    display: flex;
    justify-content: center; /* 水平居中 */
    align-items: center;
    margin: 10rpx 0;
  }
  
  .picker-group text {
    font-size: 28rpx;
    color: #555;
  }
  
  .picker-text {
    text-align: center; /* 选中内容居中 */
    padding: 10rpx;
    border: 1px solid #ddd;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #333;
    margin-left: 10rpx;
  }
  
  /* 按钮样式 */
  .reserve-btn {
    display: inline-block;
    width: 80%; /* 按钮宽度 */
    background-color: #1abc9c;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    border-radius: 10rpx;
    padding: 10rpx 0;
    margin: 10rpx auto; /* 水平居中 */
  }
  
  .reserve-btn:active {
    background-color: #16a085;
  }
  