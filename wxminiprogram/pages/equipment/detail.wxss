.container {
    padding: 40rpx; /* 增大整体内边距 */
    background-color: #f8f9fa;
  }
  
  .header {
    text-align: center;
    margin-bottom: 30rpx;
  }
  
  .title {
    font-size: 48rpx; /* 放大标题字体 */
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .equipment-image {
    width: 300rpx; /* 放大图片宽度 */
    height: 300rpx; /* 放大图片高度 */
    margin: 20rpx auto; /* 居中显示 */
    display: block;
    border-radius: 20rpx; /* 图片圆角 */
  }
  
  .description {
    font-size: 36rpx; /* 放大描述文字 */
    color: #555;
    line-height: 1.8; /* 增加行高，便于阅读 */
    margin-bottom: 20rpx;
    text-align: center; /* 居中文本 */
  }
  
  .section-title {
    font-size: 40rpx; /* 放大小标题 */
    font-weight: bold;
    color: #1abc9c;
    margin: 30rpx 0 10rpx;
    text-align: center; /* 居中 */
  }
  
  .movement-item {
    font-size: 32rpx; /* 放大动作步骤字体 */
    color: #333;
    margin: 10rpx 0;
    line-height: 1.8;
    text-align: left; /* 左对齐 */
  }
  